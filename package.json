{
  "name": "collapse-workspace",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo build && npx tsx scripts/postbuild.ts",
    "watch": "turbo watch",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "prettier --write **/*.{js,ts,tsx,yml,md,md,json}",
    "example": "pnpm --filter example run start",
    "ci:version": "changeset version && pnpm install --lockfile-only",
    "ci:release": "pnpm build && changeset publish"
  },
  "dependencies": {
    "@changesets/cli": "^2.25.2",
    "@collapsed-internal/tsconfig": "workspace:*",
    "@types/node": "^16.7.13",
    "eslint-config-collapsed": "workspace:*",
    "np": "^6.4.0",
    "prettier": "^2.3.2",
    "turbo": "^1.6.3",
    "typescript": "^4.9",
    "buffer": "^5.5.0",
    "process": "^0.11.10"
  },
  "prettier": "eslint-config-rogin/prettier",
  "alias": {
    "process": "process/browser.js",
    "buffer": "buffer"
  }
}
